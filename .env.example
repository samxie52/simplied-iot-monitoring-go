# Industrial IoT Monitoring System - 环境变量模板
# 复制此文件为 .env 并填入实际值

# 应用环境
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_LOG_LEVEL=info

# Kafka配置
KAFKA_BROKERS=localhost:9092
KAFKA_USERNAME=
KAFKA_PASSWORD=
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# PostgreSQL数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=iot_monitor
DB_SSL_MODE=disable

# 服务端口配置
WEB_PORT=8080
WEBSOCKET_PORT=8081
PROMETHEUS_PORT=9090

# 安全配置
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY_FILE=configs/encryption.key

# 告警通知配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_WEBHOOK_URL=http://localhost:8080/webhook/alerts

# 监控配置
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# 生产环境特定配置
PRODUCER_DEVICE_COUNT=1000
CONSUMER_WORKER_COUNT=5
WEBSOCKET_MAX_CONNECTIONS=1000

# 日志配置
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=100MB
LOG_MAX_AGE=7d
LOG_MAX_BACKUPS=10

# 性能调优配置
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
REDIS_POOL_SIZE=10
KAFKA_BATCH_SIZE=16384
